@model IEnumerable<UIA.Models.Flight>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.flight_date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.flight_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.depart_place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.destination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.plane_company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.plane_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.price)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.flight_date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.flight_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.duration) Mins
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.depart_place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.destination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.plane_company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.plane_name)
        </td>
        <td>
            RM @Html.DisplayFor(modelItem => item.price)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.flight_id })
        </td>
    </tr>
}

</table>
